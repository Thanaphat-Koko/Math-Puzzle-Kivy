<WrappedLabel@Label>:
    size_hint_y: None
    height: self.texture_size[1] + (self.texture_size[1]/2)
    markup: True


<KivyTutorRoot>:
    orientation: "vertical"

    ActionBar:
        ActionView:
            ActionPrevious:
                title: ""
                with_previous: False

    ScreenManager:
        id: kivy_screen_manager
        StartScreen:
            name: "start_screen"


<StartScreen@Screen>:
    BoxLayout:
        # Settings
        orientation: "vertical"
        padding: root.width * .02, root.height * .02
        spacing: min(root.width, root.height) * .02

        WrappedLabel:
            text: "[b]Kivy Math Tutor[/b]"
            markup: True
            font_size: min(root.height, root.width) / 10
            font_name:"Comic"

        Button:
            text: "Addition + "
            font_size:30
            font_name:"Comic"
        Button:
            text: "Subtraction - "
            font_size:30
            font_name:"Comic"
        Button:
            text: "Multiplication * "
            font_size:30
            font_name:"Comic"
        Button:
            text: "Division / "
            font_size:30
            font_name:"Comic"
        Button:
            text: "Mix! + - * / "
            font_size:30
            font_name:"Comic"
        Button:
            text: "About this App "
            font_size:30
            font_name:"Comic"

<AboutScreen@Screen>:
    BoxLayout:
        padding: root.width * .02, root.height * .02
        Label:
            text: app.getText()
            halign: "center"
            markup: True
            font_size: root.height / 20
            text_size: self.width, None
            center_y: .5
            on_ref_press: app.on_ref_press(*args) 